{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "lib": ["DOM", "DOM.Iterable", "ES2017"],
    "declaration": true,
    "declarationDir": "./decl"
  },
  "include": ["./src/**/*.ts"]
}
