{
  "name": "seng-boilerplate",
  "version": "2.0.0",
  "description": "Boilerplate and example project for all Seng projects",
  "main": "./index.js",
  "types": "./index.d.ts",
  "scripts": {
    "prepublishOnly": "npm-run-all -s validate build",
    "validate": "npm-run-all -p lint test",
    "dev": "npm-run-all -p dev:*",
    "dev:babel": "babel ./src -x \".ts\" --out-dir ./ --watch",
    "dev:ts": "tsc --noEmit --allowJs --watch",
    "build": "npm-run-all -s clean build:*",
    "build:babel": "babel ./src -x \".ts\" -x \".js\" --out-dir ./ --ignore \"src/**/*.spec.ts\"",
    "build:ts": "tsc -p ./tsconfig.build.json && shx cp -Rf decl/* . && shx rm -rf decl",
    "test": "jest --coverage",
    "test:dev": "jest --watch",
    "clean": "npm-run-all clean:*",
    "clean:test": "shx rm -rf coverage",
    "clean:npm": "shx rm -rf lib decl index.js",
    "doc": "npm-run-all -p doc:*",
    "doc:typedoc": "typedoc --out docs/ src/ --mode file",
    "lint": "npm-run-all lint:*",
    "lint:ts": "tslint -c tslint.json -p tsconfig.json -t verbose",
    "fix": "npm-run-all fix:ts prettify",
    "fix:ts": "tslint -c tslint.json -p tsconfig.json --fix",
    "prettify": "prettier --write \"**/*.{js,ts,json}\"",
    "check-types": "tsc --noEmit",
    "precommit": "lint-staged"
  },
  "author": "Arjan van Wijk <arjan@mediamonks.com> (https://github.com/thanarie)",
  "homepage": "https://www.mediamonks.com/",
  "license": "MIT",
  "keywords": [
    "seng",
    "mediamonks",
    "boilerplate"
  ],
  "bugs": {
    "url": "https://github.com/mediamonks/seng-boilerplate/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mediamonks/seng-boilerplate.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-typescript": "^7.7.2",
    "@babel/register": "^7.7.0",
    "@types/jest": "^24.0.23",
    "babel-jest": "^24.9.0",
    "cross-env": "^6.0.3",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "shx": "^0.3.2",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typedoc": "^0.15.2",
    "typescript": "^3.7.2"
  },
  "dependencies": {}
}
